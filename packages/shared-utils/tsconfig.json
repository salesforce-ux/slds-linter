{
        "compilerOptions": {
          "outDir": "build",
          "target": "ESNext",
          "module": "ES2022",
          "moduleResolution": "node",
          "declaration": true,
          "emitDeclarationOnly": true,
          "noEmitOnError": true,
          "esModuleInterop": true,
          "allowSyntheticDefaultImports": true,
          "resolveJsonModule": true,
          "skipLibCheck": true
        },
        "include": ["./src/**/*.ts"]
      }
      