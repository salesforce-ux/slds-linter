{
  "name": "@salesforce-ux/stylelint-plugin-slds",
  "version": "0.0.9",
  "type": "module",
  "main": "build/index.js",
  "files": [
    "build/*",
    "README.md", 
    "RULES.MD",
    ".stylelintrc.yml"
  ],
  "scripts": {
    "fix": "npm run lint -- --fix",
    "test": "NODE_ENV=test mocha",
    "compile":"tsc --project tsconfig.json",
    "prepublishOnly": "clean-pkg-json",
    "build": "gulp build"
  },
  "dependencies": {
    "chroma-js": "^3.1.2",    
    "postcss-selector-parser": "^7.1.0",
    "postcss-values-parser": "^6.0.2",
    "postcss": "^8.4.47",
    "stylelint": "^16.10.0"
  },
  "devDependencies": {
    "@types/mocha": "10.0.6",
    "@types/postcss-plugins": "1.13.2",
    "stylelint-sarif-formatter": "^1.0.7",
    "chai": "^5.1.2",
    "mocha": "^10.8.2"    
  },
  "keywords": [],
  "author": "UXF Tooling Team",
  "license": "ISC",
  "description": "Stylelint rules for Salesforce Design Systems",
  "repository": {
    "url": "https://github.com/salesforce-ux/stylelint-sds"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": "prettier --write"
  }
}
