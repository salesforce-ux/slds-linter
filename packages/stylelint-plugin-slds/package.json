{
  "name": "@salesforce-ux/stylelint-plugin-slds",
  "version": "0.0.6",
  "main": "build/index.js",
  "type": "module",
  "files": [
    "build/*",
    ".stylelintrc.yml"
  ],
  "scripts": {
    "build": "rollup --config rollup.config.js",
    "clean": "rimraf node_modules package-lock.json build",
    "lint": "eslint src tests --ext .ts",
    "fix": "npm run lint -- --fix",
    "setup-stylelint": "node node_modules/@salesforce-ux/stylelint-sds/build/scripts/create-stylelint-config.js",
    "test": "NODE_ENV=test mocha"
  },
  "dependencies": {
    "chroma-js": "^3.1.2",
    "cli-progress": "^3.12.0",
    "cross-spawn": "^7.0.6",
    "eslint": "8.56.0",
    "glob": "^11.0.1",
    "JSONStream": "^1.3.5",
    "postcss-values-parser": "^6.0.2",
    "rimraf": "^6.0.1",
    "stylelint": "16.10.0",
    "stylelint-sarif-formatter": "^1.0.7",
    "yaml": "^2.6.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^2.1.4",
    "@rollup/plugin-typescript": "^12.1.1",
    "@types/eslint": "^9.6.1",
    "@types/eslint__eslintrc": "^2.1.2",
    "@types/mocha": "10.0.6",
    "@types/node": "20.11.19",
    "@types/postcss-html": "^1.5.3",
    "@types/postcss-plugins": "1.13.2",
    "chai": "^5.1.2",
    "csv-parse": "^5.5.6",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "mocha": "^10.8.2",
    "postcss": "^8.4.47",
    "postcss-html": "^1.7.0",
    "prettier": "^3.4.2",
    "rollup": "4.12.0",
    "rollup-plugin-copy": "3.5.0",
    "rollup-plugin-delete": "2.0.0",
    "rollup-plugin-ts": "3.4.5",
    "ts-node": "10.9.2",
    "typescript": "5.3.3"
  },
  "keywords": [],
  "author": "UXF Tooling Team",
  "license": "ISC",
  "description": "Stylelint rules for Salesforce Design Systems",
  "repository": {
    "url": "https://github.com/salesforce-ux/stylelint-sds"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": "prettier --write"
  }
}
