{
  "name": "@salesforce-ux/stylelint-plugin-slds",
  "version": "0.5.0-internal",
  "type": "module",
  "main": "build/index.js",
  "files": [
    "build/**",
    "README.md",
    "RULES.MD",
    ".stylelintrc.mjs"
  ],
  "scripts": {
    "test": "NODE_OPTIONS=\"--experimental-vm-modules\" npx jest",
    "prepublishOnly": "clean-pkg-json",
    "build": "gulp build",
    "dev": "gulp dev"
  },
  "dependencies": {
    "@salesforce-ux/sds-metadata": "^0.3.3",
    "chroma-js": "^3.1.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/postcss-plugins": "1.13.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5"
  },
  "peerDependencies": {
    "postcss": "^8.4.47",
    "postcss-selector-parser": "^7.1.0",
    "postcss-value-parser": "^4.2.0",
    "stylelint": "^16.10.0"
  },
  "keywords": [],
  "author": "UXF Tooling Team",
  "license": "ISC",
  "description": "Stylelint rules for Salesforce Design Systems",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/salesforce-ux/slds-linter.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": "prettier --write"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  }
}
