{
  "compilerOptions": {
    "outDir": "build",
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "declaration": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "skipLibCheck": true,    
    "noEmit": true,
    "paths": {
      "@salesforce-ux/stylelint-plugin-slds/*": ["../../stylelint-plugin-slds/*"]
    }
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["build", "node_modules"]
}
