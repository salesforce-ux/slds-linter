{
  "name": "@salesforce-ux/eslint-plugin-slds",
  "version": "0.2.1",
  "main": "build/index.js",
  "files": [
    "build/**",
    "README.md",
    "RULES.md",
    "eslint.config.js",
    ".eslintrc.yml"
  ],
  "engines": {
    "node": ">=18.18.0"
  },
  "scripts": {
    "build": "gulp build",
    "test": "jest",
    "test:eslint8": "ESLINT_USE_FLAT_CONFIG=false jest",
    "test:eslint9": "ESLINT_USE_FLAT_CONFIG=true jest",
    "prepublishOnly": "clean-pkg-json"
  },
  "keywords": [
    "eslint",
    "eslint-plugin",
    "lightning-design-system",
    "slds2"
  ],
  "author": "UXF Tooling Team",
  "license": "ISC",
  "description": "ESLint plugin provides custom linting rules specifically built for Salesforce Lightning Design System 2 (SLDS 2 beta)",
  "dependencies": {
    "@html-eslint/eslint-plugin": "^0.34.0",
    "@html-eslint/parser": "^0.34.0",
    "@salesforce-ux/sds-metadata": "~0.2.1"
  },
  "peerDependencies": {
    "eslint": "^8.0.0 || ^9.0.0"
  },
  "peerDependenciesMeta": {
    "eslint": {
      "optional": false
    }
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/salesforce-ux/slds-linter.git"
  },
  "bugs": {
    "url": "https://github.com/salesforce-ux/slds-linter/issues"
  },
  "homepage": "https://github.com/salesforce-ux/slds-linter#slds-linter",
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  }
}