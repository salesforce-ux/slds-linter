{
  "name": "@salesforce-ux/eslint-plugin-slds",
  "version": "1.0.3-internal",
  "main": "build/index.js",
  "exports": {
    ".": {
      "types": "./build/index.d.ts",
      "import": "./build/index.js",
      "require": "./build/index.js"
    },
    "./config": {
      "import": "./eslint.config.mjs",
      "require": "./eslint.config.mjs"
    },
    "./rule-messages.yml": "./src/config/rule-messages.yml"
  },
  "files": [
    "build/**",
    "README.md",
    "RULES.md",
    "eslint.config.mjs",
    "src/config/rule-messages.yml"
  ],
  "engines": {
    "node": ">=18.18.0"
  },
  "scripts": {
    "build": "gulp build",
    "test": "NODE_OPTIONS=\"--experimental-vm-modules\" npx jest",
    "prepublishOnly": "clean-pkg-json"
  },
  "keywords": [
    "eslint",
    "eslint-plugin",
    "lightning-design-system",
    "slds2"
  ],
  "author": "UXF Tooling Team",
  "license": "ISC",
  "description": "ESLint plugin provides custom linting rules specifically built for Salesforce Lightning Design System 2 (SLDS 2 beta)",
  "dependencies": {
    "@eslint/css": "^0.9.0",
    "@eslint/css-tree": "^3.6.5",
    "@html-eslint/eslint-plugin": "^0.34.0",
    "@html-eslint/parser": "^0.34.0",
    "@salesforce-ux/sds-metadata": "^0.4.0",
    "chroma-js": "^3.1.2"
  },
  "peerDependencies": {
    "eslint": "^8.0.0 || ^9.0.0"
  },
  "peerDependenciesMeta": {
    "eslint": {
      "optional": false
    }
  },
  "devDependencies": {
    "@types/chroma-js": "^2.4.4",
    "@types/eslint": "^8.56.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.11.19",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "yaml": "^2.8.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/salesforce-ux/slds-linter.git"
  },
  "bugs": {
    "url": "https://github.com/salesforce-ux/slds-linter/issues"
  },
  "homepage": "https://github.com/salesforce-ux/slds-linter#slds-linter",
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  }
}
