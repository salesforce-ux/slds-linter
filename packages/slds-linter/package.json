{
    "name": "@salesforce-ux/slds-linter",
    "version": "0.0.8",
    "description": "SLDS Linter with both stylelint and eslint together",
    "main": "index.mjs",
    "bin": {
        "slds-linter": "./bin/slds-linter.js"
    },
    "access": "public",
    "files": [
        "build/",
        "bin/",
        "README.md"
    ],
    "scripts": {
        "setup-lint": "node ./build/setup.js",
        "compile": "tsc --project tsconfig.json",
        "prepublishOnly": "clean-pkg-json",
        "build": "gulp build"
    },
    "type": "module",
    "dependencies": {
        "@salesforce-ux/eslint-plugin-slds": "*",
        "@salesforce-ux/stylelint-plugin-slds": "*",
        "chalk": "^5.3.0",
        "eslint": "^8.0.0",
        "npm-run-path": "^6.0.0",
        "stylelint": "^16.10.0",
        "yargs": "^17.7.2"
    },
    "keywords": [
        "eslint SDS",
        "stylelint SDS",
        "salesforce",
        "sds linter"
    ],
    "author": "Kishore Nemalipuri",
    "license": "MIT"
}
