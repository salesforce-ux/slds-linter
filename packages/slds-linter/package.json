{
    "name": "@salesforce-ux/slds-linter",
    "version": "0.0.7",
    "description": "SLDS Linter with both Stylelint and ESLint configurations",
    "main": "index.mjs",
    "workspaces": [
        "packages/*"
    ],
    "access": "public",
    "files": [
        "build/",
        "README.md",
        ".eslintrc.yml",
        ".stylelintrc.yml"
    ],
    "scripts": {
        "build": "rollup --config rollup.config.js",
        "clean": "rm -rf build package-lock.json",
        "test": "echo 'Not implemented!'",
        "setup-lint": "node ./build/setup.js",
        "postinstall": "node ./build/setup.js"
    },
    "type": "module",
    "dependencies": {
        "@salesforce-ux/eslint-plugin-slds": "latest",
        "@salesforce-ux/stylelint-plugin-slds": "latest",
        "js-yaml": "^4.1.0",
        "chalk": "^5.2.0",
        "boxen": "^7.1.1"
    },
    "peerDependencies": {
        "eslint": "^8.0.0",
        "stylelint": "^14.0.0"
    },
    "keywords": [
        "eslint SDS",
        "stylelint SDS",
        "salesforce",
        "sds linter",
        "linting",
        "code quality"
    ],
    "author": "Kishore Nemalipuri",
    "license": "MIT",
    "devDependencies": {
        "@rollup/plugin-typescript": "^12.1.2"
    }
}
