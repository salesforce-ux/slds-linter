{
    "name": "@salesforce-ux/slds-linter",
    "version": "0.0.6",
    "description": "SLDS Linter with both stylelint and eslint together",
    "main": "index.mjs",
    "workspaces": [
        "packages/*"
    ],
    "access": "public",
    "files": [
        "build/",
        "README.md"
    ],
    "scripts": {
        "build": "rollup --config rollup.config.js",
        "clean": "rm -rf build package-lock.json",
        "test": "echo 'Not implemented!'",
        "setup-lint": "node ./build/setup.js",
        "prepublishOnly": "npm run build",
        "postinstall": "if [ -f ./build/setup.js ]; then node ./build/setup.js; else echo '⚠️ setup.js not found. Skipping setup.'; fi"
    },
    "type": "module",
    "dependencies": {
        "@salesforce-ux/eslint-plugin-slds": "latest",
        "@salesforce-ux/stylelint-plugin-slds": "latest"
    },
    "keywords": [
        "eslint SDS",
        "stylelint SDS",
        "salesforce",
        "sds linter"
    ],
    "author": "Kishore Nemalipuri",
    "license": "MIT",
    "devDependencies": {
        "@rollup/plugin-typescript": "^12.1.2"
    }
}
