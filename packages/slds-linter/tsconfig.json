{
  "compilerOptions": {
    "outDir": "build",
    "target": "ESNext",
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_module/*", "build/*"]
}
