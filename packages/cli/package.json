{
  "name": "@salesforce-ux/slds-linter",
  "version": "0.3.1-internal-beta.1",
  "description": "SLDS Linter CLI tool for linting styles and components",
  "keywords": [
    "lightning design system linter",
    "SLDS Linter",
    "SLDS2 Linter",
    "SLDS Stylelint",
    "SLDS ESLint"
  ],
  "author": "UXF Tooling Team",
  "type": "module",
  "main": "build/index.js",
  "exports": {
    ".": "./build/index.js",
    "./executor": {
      "types": "./build/executor/index.d.ts",
      "default": "./build/executor/index.js"
    },
    "./utils": {
      "types": "./build/utils/index.d.ts",
      "default": "./build/utils/index.js"
    }
  },
  "files": [
    "build/**",
    "README.md"
  ],
  "bin": "build/index.js",
  "scripts": {
    "prepublishOnly": "clean-pkg-json",
    "build": "gulp build",
    "dev": "gulp dev",
    "test": "NODE_OPTIONS=\"--experimental-vm-modules\" npx jest",
    "lint": "eslint src/**/*.ts"
  },
  "dependencies": {
    "@salesforce-ux/eslint-plugin-slds": "0.3.1-internal-beta.1",
    "@salesforce-ux/stylelint-plugin-slds": "0.3.1-internal-beta.1",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "chalk": "^4.1.2",
    "commander": "^13.1.0",
    "eslint": "8.57.1",
    "export-to-csv": "^1.4.0",
    "globby": "^14.1.0",
    "import-meta-resolve": "^4.1.0",
    "json-stream-stringify": "^3.1.6",
    "node-sarif-builder": "^3.2.0",
    "ora": "^5.4.1",
    "semver": "^7.7.1",
    "stylelint": "16.14.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5"
  },
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/salesforce-ux/slds-linter.git"
  },
  "bugs": {
    "url": "https://github.com/salesforce-ux/slds-linter/issues"
  },
  "homepage": "https://github.com/salesforce-ux/slds-linter/tree/main/packages/cli#slds-linter",
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  }
}
