{
  "name": "@salesforce-ux/stylelint-sds",
  "version": "1.0.0",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "install-all": "npm install --workspaces",
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "clean": "npm run clean --workspaces",
    "report": "node packages/stylelint-rules/build/generate-report.js -- -c packages/test-repository/.stylelintrc.yml",
    "report_custom": "node packages/stylelint-rules/build/generate-report.js -- ",
    "report_npm": "node node_modules/@salesforce-ux/stylelint-sds/build/generate-report.js -- ",
    "fix": "stylelint packages/test-repository/force-app/main/default/lwc/myComponent/test.css --fix"
  },
  "devDependencies": {
    "rimraf": "^6.0.1"
  }
}
